<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="country_codes_view_tree" model="ir.ui.view">
        <field name="name">country.codes.view.tree</field>
        <field name="model">country.codes</field>
        <field name="arch" type="xml">
            <tree string="Name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>  
            </tree>
        </field>
    </record>

    <record id="country_codes_view_form" model="ir.ui.view">
        <field name="name">country.codes.view.form</field>
        <field name="model">country.codes</field>
        <field name="arch" type="xml">
            <form string="Name">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="country"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="country_codes_action" model="ir.actions.act_window">
        <field name="name">Country Codes</field>
        <field name="res_model">country.codes</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Country found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem id="menu_country_codes"
        name="Country Codes"
        action="country_codes_action"
        parent="contacts.menu_localisation"
        sequence="7"/>
</odoo>